{
    "name": "compostore/composer-store",
    "description": "A pnpm-inspired global store for Composer packages â€” share packages across projects, save disk space.",
    "type": "composer-plugin",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "composer-plugin-api": "^2.0",
        "ext-json": "*",
        "ext-zip": "*",
        "symfony/console": "^6.0|^7.0"
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "CompoStore\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CompoStore\\Tests\\": "tests/"
        }
    },
    "bin": ["bin/compostore"],
    "extra": {
        "class": "CompoStore\\Plugin\\CompoStorePlugin"
    },
    "config": {
        "sort-packages": true
    }
}
